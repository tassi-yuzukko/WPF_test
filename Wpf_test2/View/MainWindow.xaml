<Window x:Class="Wpf_test2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_test2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="46" Margin="49,85,0,0" TextWrapping="Wrap" Text="{Binding MyText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="169"/>
        <Button Command="{Binding MyButton}" HorizontalAlignment="Left" Height="46" Margin="269,85,0,0" VerticalAlignment="Top" Width="77">あちょー</Button>
    </Grid>
</Window>
